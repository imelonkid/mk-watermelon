{
  "manifest_version": 3,
  "name": "Watermelon",
  "version": "1.0.1",
  "description": "在侧边栏中与Watermelon AI进行聊天",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidebar.html",
    "default_title": ""
  },
  "permissions": [
    "sidePanel",
    "storage",
    "windows",
    "tabs"
  ],
  "host_permissions": [
    "https://*.deepseek.com/*"
  ]
} 